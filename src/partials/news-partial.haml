-# "docs" will collect all the documents in the file 'events.yaml'
- docs = []
- YAML.load_documents(open("src/helpers/news.yaml")){ |doc| docs << doc }
-# at this point docs contains the full content of 'events.yaml'
- docs.each do |listing|
  .element_wrapper
    .side
      %h2= listing["date"]
      %p= listing["author"]
    .main
      %h2= listing["title"]
      - listing["text"].split("\n").each do |para|
        %p= para